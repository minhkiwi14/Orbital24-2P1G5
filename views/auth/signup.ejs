<%- include('../shared/includes/head') %>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/shared.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%- include('../shared/includes/header-base') %>
    <main>
        <h1>Create New Account</h1>
        <% if (inputData.errorMessage) { %>
            <section class="alert">
                <h2>Invalid Input</h2>
                <p><%= inputData.errorMessage %></p>
            </section>
        <% } %>
        <form action="/signup" method="POST">
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <p>
                <label for="fullname">Full Name</label>
                <input type="text" id="fullname" name="fullname" value="<%= inputData.fullname %>" required>
            </p>
            <p>
                <label for="email">E-mail</label>
                <input type="email" id="email" name="email" value="<%= inputData.email %>" required>
            </p>
            <p>
                <label for="confirm-email">Confirm E-mail</label>
                <input type="email" id="confirm-email" name="confirm-email" value="<%= inputData.confirmEmail %>" required>
            </p>
            <p>
                <label for="password">Password</label>
                <input
                    type="password"
                    id="password"
                    name="password" 
                    minlength="8" 
                    value="<%= inputData.password %>" 
                    required>
            </p>
            <button class="btn">Create Account</button>
            <p id="switch-form"><a href="/login">Login instead</a></p>
        </form>
    </main>
<%- include('../shared/includes/footer') %>